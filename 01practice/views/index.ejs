<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
        <div class="form p-10">
            <form action="/create" method="post">
                <input type="text" placeholder="Title" name="title" class="block px-5 py-2 bg-zinc-800 w-full rounded-lg outline-none">
                <textarea placeholder="Write task details" name="details" class="mt-2 block px-5 py-2 bg-zinc-800 resize-none outline-none w-full rounded-lg"></textarea>
                <input type="submit" value="Create task" class="mt-2 bg-sky-600 px-5 py-2 rounded -md">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3">
            <% if(files.length>0){%>
                <% files.forEach(function(val){ %>
                    <div class="task  w-72 py-4 px-3 bg-zinc-800 rounded-md ">
                        <h1 class="text-2xl tracking-tighter"><%=val%></h1>
                        <div class="flex justify-between items-center mt-3">
                            <a  class="text-sky-600 inline-block " href="/file/<%=val%>">Read more.</a>
                        <a class="text-zinc-600 inline-block "  href="/edit/<%=val%>">Edit</a>
                        </div>
                        
                    </div>

                    <% }) %>
            <% } else { %>
                <h1 class="text-zinc-600">No tasks yet</h1>
            <% } %>



            
        </div>
    </div>

</body>
</html>