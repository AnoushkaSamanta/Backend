<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style1.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
        <div class="nav mb-10 text-sky-500" >
            <a href="/">Back to Home</a>
        </div>
      <h1 class="text-3xl tracking-tigher mb-3">
        All Users
      </h1>
      <div class="users  flex gap-3 flex-wrap">
        <% if(users.length>0) {%>
        <% users.forEach(function(user){ %>
            <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                <div class="w-full h-52 rounded-lg bg-zinc-700 overflow-hidden">
                    <img src="<%=user.image%>" alt="" class="w-full h-full object-cover">
                </div>
                <h3 class="text-xl mt-3 tracking-tigher"><%=user.name%></h3>
                <h5 class="text-zinc-500"><%=user.email%></h5>
                <div class="flex mt-10 justify-between">
                  <a href="/edit/<%=user._id%>" class="text-sky-500">Edit User</a>
                  <a href="/delete/<%=user._id%>" class="text-red-500">Delete User</a>
                </div>
              </div>
        <%}) %>
        <% } else {%>
            <h3 class="text-xl text-zinc-500">No users yet</h3>
            <% } %>

 
      </div>
    </div>
  </body>
</html>
